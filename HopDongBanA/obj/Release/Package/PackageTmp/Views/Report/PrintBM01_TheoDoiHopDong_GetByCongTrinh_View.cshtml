@using HopDongMgr.Models;
@using System;
@{
    ViewBag.Title = "Danh Sách Hợp đồng theo Công trình";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<DM_CongTrinh> listDM_NguonVon = (List<DM_CongTrinh>) ViewBag.listDM_CongTrinh;
    SelectList sl = new SelectList(listDM_NguonVon, "MaCT", "TenCT");
}
<style>
    tr.group,
    tr.group:hover {
        background-color: #ddd !important;
    }
</style>
<div id='myModal' class='modal fade in' role="dialog">
    <div class="modal-dialog modal-lg" style="width: 95%">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">X</span>
            </button>
            <div class="modal-body" id="tableChiTiet" style="overflow: auto; width:100%; height:500px">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <table id="datatable_DSBaoCao" class="display nowrap dataTable dtr-inline" cellspacing="0" role="grid" aria-describedby="example_info" style="width: 100%;">
            <tbody>
                <tr id="TheoDoiHopDong">
                    <td>
                        Tên Công trình
                    </td>
                    <td>
                        <div class="form-group">
                            @*@Html.LabelFor(model => model.IDLoai, "IDLoai", htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-5">
                                @Html.DropDownList("liDMCT", sl, htmlAttributes: new { @class = "form-control col-md-10" })
                            </div>
                        </div>
                    </td>
                </tr>
                <tr id="">
                    <td >
                        <div class="col-md-6">
                            <input type="button" value="Xem báo cáo" class="form-control btn btn-primary col-md-2" id="btnTheoDoiHopDong_CT" />
                        </div>
                    </td>
                    <td>

                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/App/Report/Report_DanhSachBaoCao.js"></script>
    <script type="text/javascript">
    
    </script>
}

