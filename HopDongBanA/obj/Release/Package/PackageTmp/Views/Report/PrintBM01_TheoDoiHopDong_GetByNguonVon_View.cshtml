@using HopDongMgr.Models;
@using System;
@{
    ViewBag.Title = "BÁO CÁO THEO DÕI THỰC HIỆN HỢP ĐỒNG CÁC CÔNG TRÌNH";
    List<DM_NguonVon> listDM_NguonVon = (List<DM_NguonVon>)ViewBag.listDM_NguonVon;
    SelectList sl = new SelectList(listDM_NguonVon, "MaNV", "TenNV");

    List<DM_CongTrinh> listDM_CongTrinh = (List<DM_CongTrinh>)ViewBag.listDM_CongTrinh;
    SelectList slCT = new SelectList(listDM_CongTrinh, "MaCT", "TenCT");
}
<style>
    tr.group,
    tr.group:hover {
        background-color: #ddd !important;
    }
</style>
<div id='myModal' class='modal fade in' role="dialog">
    <div class="modal-dialog modal-lg" style="width: 95%">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">X</span>
            </button>
            <div class="modal-body" id="tableChiTiet" style="overflow: auto; width:100%; height:500px">
            </div>
        </div>
    </div>
</div>
<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">Nguồn vốn : </label>
        <div class="col-md-6">
            @Html.DropDownList("liDMNV", sl, htmlAttributes: new { @class = "form-control col-md-5" })
        </div>
        <div class="col-md-2">
            <input type="button" value="Xem báo cáo" class="form-control btn btn-primary col-md-2" id="btnTheoDoiHopDong_NV" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Công trình : </label>
        <div class="col-md-6">
            @Html.DropDownList("liDMCT", slCT, htmlAttributes: new { @class = "form-control col-md-5" })
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/App/Report/Report_DanhSachBaoCao.js"></script>
    <script type="text/javascript">

    </script>
}

