@model HopDongMgr.Models.DM_CongTrinh

@{
    ViewBag.Title = "CẬP NHẬT THÔNG TIN CÔNG TRÌNH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    @Html.Raw(TempData["err"])
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDCT)
        @*@Html.HiddenFor(model => model.MaCT_DA)*@
        <div class="form-group row">
            @*@Html.LabelFor(model => model.TenCT, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Mã công trình <span style="color:red">(*)</span></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaCT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaCT_DA, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @*@Html.LabelFor(model => model.TenCT, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Tên công trình <span style="color:red">(*)</span></label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenCT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenCT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @*@Html.LabelFor(model => model.MaNV, "MaNV", htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Nguồn vốn <span style="color:red">(*)</span></label>
            <div class="col-md-4">
                @Html.DropDownList("MaNV", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
            </div>

            @*@Html.LabelFor(model => model.MaDD, "MaDD", htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Địa điểm <span style="color:red">(*)</span></label>
            <div class="col-md-4">
                @Html.DropDownList("MaDD", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDD, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            @*@Html.LabelFor(model => model.Khoa, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Khóa</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @{
                        bool Khoa = Model.Khoa.GetValueOrDefault(false);
                    }
                    @Html.CheckBoxFor(Model => Khoa, new Dictionary<string, object>() { { "checked", "true" }, { "data-off-color", "danger" }, { "class", "cbootstrapSwitch" } })
                    @Html.ValidationMessageFor(model => model.Khoa, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group row">
            <div class="offset-md-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <input type="button" value="Quay lại" class="btn btn-default" onclick="location.href='@Url.Action("Index")'" />
            </div>
        </div>
    </div>
}