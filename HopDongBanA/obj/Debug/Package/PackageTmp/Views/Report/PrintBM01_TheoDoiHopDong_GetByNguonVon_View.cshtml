@using HopDongMgr.Models;
@using System;
@using HopDongMgr.DungChung;
@{
    ViewBag.Title = "BÁO CÁO THEO DÕI THỰC HIỆN HỢP ĐỒNG THEO NGUỒN VỐN";
    List<DM_NguonVon> listDM_NguonVon = (List<DM_NguonVon>)ViewBag.listDM_NguonVon;
    SelectList sl = new SelectList(listDM_NguonVon.OrderBy(o => o.TenNV), "MaNV", "TenNV");

    List<DM_CongTrinh> listDM_CongTrinh = (List<DM_CongTrinh>)ViewBag.listDM_CongTrinh;
    SelectList slCT = new SelectList(listDM_CongTrinh.OrderBy(o => o.TenCT), "IDCT", "TenCT");

    List<SelectListItem> listTrangThai = new List<SelectListItem>();
    listTrangThai = Common.TrangThaiHopDong();
}
<style>
    tr.group,
    tr.group:hover {
        background-color: #ddd !important;
    }
</style>
<div id='myModal' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true" style="width: 100%">
    <div class="modal-dialog " role="document" style="max-width: 1800px">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">X</span>
        </button>
        <div class="modal-content">
            <div class="modal-body" id="tableChiTiet" style="overflow: auto; width:100%; height:500px">
            </div>
        </div>
    </div>
</div>
<div class="form-horizontal">
    <div class="form-group row">
        <label class="control-label col-md-2">Nguồn vốn : </label>
        <div class="col-md-6">
            @Html.DropDownList("liDMNV", sl, htmlAttributes: new { @class = "form-control selectpicker", @data_live_search = "true", @title = "Chọn nguồn vốn..." })
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-md-2">Công trình : </label>
        <div class="col-md-6">
            @Html.DropDownList("liDMCT", slCT, htmlAttributes: new { @class = "form-control selectpicker", @data_live_search = "true", @title = "Chọn công trình..." }) @*data-live-search="true"*@
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-md-2">Trạng thái : </label>
        <div class="col-md-6">
            @Html.DropDownList("liTrangThai", listTrangThai, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-md-2 col-md-2">
            <input type="button" value="Xem báo cáo" class="form-control btn btn-primary" id="btnTheoDoiHopDong_NV" />
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/App/Report/Report_DanhSachBaoCao.js"></script>
    <script src="~/Content/plugins/bootstrap-select-1.12.4/js/bootstrap-select.js"></script>
    <script type="text/javascript">

    </script>
}

