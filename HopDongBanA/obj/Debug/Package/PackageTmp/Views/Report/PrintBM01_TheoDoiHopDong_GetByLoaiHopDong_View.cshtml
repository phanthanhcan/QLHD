@using HopDongMgr.Models;
@using System;
@using HopDongMgr.DungChung;
@{
    ViewBag.Title = "BÁO CÁO THEO DÕI THỰC HIỆN HỢP ĐỒNG THEO LOẠI HỢP ĐỒNG";


    List<DM_LoaiHopDong> listDM_LoaiHopDong = (List<DM_LoaiHopDong>)ViewBag.listDM_LoaiHopDong;
    SelectList slLoaiHopDong = new SelectList(listDM_LoaiHopDong.OrderBy(o => o.IDLoai), "IDLoai", "TenLoai");

    List<SelectListItem> listTrangThai = new List<SelectListItem>();
    listTrangThai = Common.TrangThaiHopDong();
}
<style>
    tr.group,
    tr.group:hover {
        background-color: #ddd !important;
    }
</style>
<div id='myModal' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true" style="width: 100%">
    <div class="modal-dialog " role="document" style="max-width: 1800px">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">X</span>
            </button>
            <div class="modal-body" id="tableChiTiet" style="overflow: auto; width:100%; height:500px">
            </div>
        </div>
    </div>
</div>
<div class="form-horizontal">
    <div class="form-group row">
        <label class="control-label col-md-2">Loại Hợp Đồng : </label>
        <div class="col-md-6">
            @Html.DropDownList("liDMLHD", slLoaiHopDong, htmlAttributes: new { @class = "form-control selectpicker", @data_live_search = "true" }) @*data-live-search="true"*@
            @*@Html.DropDownList("IDHD", null, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })*@
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-md-2">Trạng thái : </label>
        <div class="col-md-6">
            @Html.DropDownList("liTrangThai", listTrangThai, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="offset-md-2 col-md-2">
            <input type="button" value="Xem báo cáo" class="form-control btn btn-primary" id="btnTheoDoiHopDong_LHD" />
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/App/Report/Report_DanhSachBaoCao.js"></script>
    <script src="~/Content/plugins/bootstrap-select-1.12.4/js/bootstrap-select.js"></script>
    <script type="text/javascript">

    </script>
}