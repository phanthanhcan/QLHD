@using HopDongMgr.Models;
@using System;
@using HopDongMgr.DungChung;
@{
    ViewBag.Title = "BÁO CÁO THEO DÕI THỰC HIỆN HỢP ĐỒNG THEO ĐIA ĐIỂM";


    List<DM_DiaDiem> listDM_DiaDiem = (List<DM_DiaDiem>)ViewBag.listDM_DiaDiem;
    SelectList slDD = new SelectList(listDM_DiaDiem.OrderBy(o => o.TenDD), "MaDD", "TenDD");

    List<SelectListItem> listTrangThai = new List<SelectListItem>();
    listTrangThai = Common.TrangThaiHopDong();
}
<style>
    tr.group,
    tr.group:hover {
        background-color: #ddd !important;
    }
</style>
<div id='myModal' class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myExtraLargeModalLabel" aria-hidden="true" style="width: 100%">
    <div class="modal-dialog " role="document" style="max-width: 1800px">
        <div class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">X</span>
            </button>
            <div class="modal-body" id="tableChiTiet" style="overflow: auto; width:100%; height:500px">
            </div>
        </div>
    </div>
</div>
<div class="form-horizontal">
    <div class="form-group row">
        <label class="control-label col-md-2">Địa Điểm : </label>
        <div class="col-md-6">
            @Html.DropDownList("liDMDD", slDD, htmlAttributes: new { @class = "form-control col-md-5 selectpicker", @data_live_search = "true" })
        </div>
    </div>
    <div class="form-group row">
        <label class="control-label col-md-2">Trạng thái : </label>
        <div class="col-md-6">
            @Html.DropDownList("liTrangThai", listTrangThai, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="offset-md-2 col-md-2">
            <input type="button" value="Xem báo cáo" class="form-control btn btn-primary " id="btnTheoDoiHopDong_DiaDiem" />
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/App/Report/Report_DanhSachBaoCao.js"></script>
    <script src="~/Content/plugins/bootstrap-select-1.12.4/js/bootstrap-select.js"></script>
    <script type="text/javascript">

    </script>
}