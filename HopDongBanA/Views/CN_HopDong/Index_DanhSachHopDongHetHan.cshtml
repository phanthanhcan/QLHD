@using HopDongMgr.Models;
@model List<List<GetList_HopDongHetHan_ALL_Model>>
@{
    ViewBag.Title = "Danh sách hợp dồng hết hạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <ul class="nav nav-tabs nav-justified" style=" font-size:14px; font-weight:bold">
        <li class="nav-item "> <a class="nav-link active te" data-toggle="tab" href="#HHDC">HĐ hết hạn điều chỉnh</a></li>
        <li class="nav-item "><a class="nav-link" data-toggle="tab" href="#HHTC">HĐ hết hạn thi công</a></li>
        <li class="nav-item "><a class="nav-link" data-toggle="tab" href="#HHTH">HĐ hết hạn thực hiện</a></li>
    </ul>
    <div class="tab-content">
        <!--hết hạn điều chỉnh-->
        <div id="HHDC" class="tab-pane active table-scroll60">
            <table id="Table1" class="table table-striped">
                <thead >
                    <tr class="fixedHeader" role="row"   >
                        <th class="bg-secondary" nowrap  >Số hợp đồng</th>
                        <th class="bg-secondary" nowrap>Công trình</th>
                        <th class="bg-secondary" nowrap>Loại hợp đồng</th>
                        <th class="bg-secondary" nowrap>Ngày ký</th>
                        <th class="bg-secondary" nowrap>Giá trị hợp đồng</th>
                        <th class="bg-secondary" nowrap>Ngày hết hạn thi công</th>
                        <th class="bg-secondary" nowrap>Ngày hết hạn thực tế</th>
                        <th class="bg-secondary" nowrap>Người theo dõi</th>
                    </tr>
                </thead>
                <tbody >
                    @if (Model != null)
                    {
                        foreach (var item in Model[0])
                        {
                            <tr role="row" id="@item.IDHD" nowrap>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoHopDong)
                                </td>
                                <td nowrap>
                                    @Html.DisplayFor(modelItem => item.TenCT)
                                </td>
                                <td class="text-left" title="@item.TenLoai" nowrap>
                                    @item.TenLoai.Substring(0, item.TenLoai.IndexOf(',') > -1 ? item.TenLoai.IndexOf(',') : item.TenLoai.Length)
                                </td>
                                <td class="text-center">
                                    @{
                                        if (item.NgayKy.HasValue == true)
                                        {

                                            @item.NgayKy.Value.ToString("dd/MM/yyyy");
                                        }
                                    }
                                </td>
                                <td class="text-right">
                                    @{
                                        if (item.GiaTriThucTe.HasValue == true)
                                        {
                                            string x = string.Format("{0:0,0}", item.GiaTriThucTe.Value);
                                            @x;
                                        }
                                    }
                                </td>
                                <td class="text-center">
                                    @{
                                        if (item.NgayHetHanThiCong.HasValue == true)
                                        {

                                            @item.NgayHetHanThiCong.Value.ToString("dd/MM/yyyy");
                                        }
                                    }
                                </td>
                                <td class="text-center">
                                    @{
                                        if (item.NgayHetHanThucTe.HasValue == true)
                                        {

                                            @item.NgayHetHanThucTe.Value.ToString("dd/MM/yyyy");
                                        }
                                    }
                                </td>
                                <td nowrap>
                                    @Html.DisplayFor(modelItem => item.HoTen)
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
