            success: function (data) {
                $("#cbPhong").html(""); // clear before appending new list
                $.each(data, function (i, nhom) {
                    $("#cbPhong").append(
                        $('<option></option>').val(nhom.Id).html(nhom.Ten));
                })
            },
            error: function (xhr) {
                console.log("error: " + " status: " + status + " er:");
            }
        });
    }

