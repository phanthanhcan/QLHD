    $('#btnDeletePhoto').click(function () {
        var ten = '@Model.AnhDaiDien';
        var id = '@Model.oid';
        $.ajax({
            method: 'POST',
            url: '@Url.Action("DeletePhoto")',
            data: { nguoiDung: id, photoFileName: ten },
            beforeSend: function () {
                Loading();
            },
            success: function (data) {
                LoadingHide();
                $.notify({
                    message: 'Xóa thành công'
                }, {
