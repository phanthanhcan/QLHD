                var myArray = [];
                var o;
                @*@foreach (SelectListItem d in NgayKyHD.AsEnumerable<SelectListItem>())
                {
                    var Value = d.Value;
                    var Text = d.Text;
                    @:o = { "Value": "@Value", "Text": "@Text" };
